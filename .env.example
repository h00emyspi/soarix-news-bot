# Telegram
TELEGRAM_BOT_TOKEN=

# Optional: if you already know where to post
TARGET_CHAT_ID=

# Schedule (local machine time)
POST_TIMES=09:00,12:00,15:00,18:00,21:00,00:00
POSTS_PER_DAY=6

# LLM backend (prefer Ollama; fallback to OpenAI)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3-coder:480b-cloud

OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# LLM tuning
LLM_TIMEOUT_SECONDS=15
PREFER_OLLAMA=1
ENABLE_REVIEW=0

# Telethon (MTProto collector for channel stats)
# Create at https://my.telegram.org
TELETHON_API_ID=
TELETHON_API_HASH=
# Session file name (no extension)
TELETHON_SESSION=soarix_telethon

# Collector polling
COLLECT_INTERVAL_SECONDS=600
METRICS_RECENT_LIMIT=30

# Storage
DB_PATH=soarix_news.db

# Feeds filtering
LANG=ru
